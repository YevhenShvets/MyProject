<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <EditText
        android:id="@+id/reg_email_post_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/login_fild"
        android:ems="18"
        android:fontFamily="serif"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#000"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reg_email_post_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Email:"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/reg_email_post_edit"
        app:layout_constraintStart_toStartOf="@+id/reg_email_post_edit"
        />

    <Button
        android:id="@+id/reg_email_post_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/main_button"
        android:fontFamily="casual"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:stateListAnimator="@null"
        android:text="POST"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/reg_email_post_edit"
        app:layout_constraintTop_toBottomOf="@+id/reg_email_post_edit" />
    <FrameLayout
        android:id="@+id/registration_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>